{
  "codeLens.enable": true,
  "codeLens.separator": "",

  "diagnostic.enableHighlightLineNumber": false,
  "diagnostic.errorSign": "",
  "diagnostic.warningSign": "",
  "diagnostic.infoSign": "",
  "diagnostic.hintSign": "",

  "languageserver": {
    "ccls": {
      "command": "ccls",
      "filetypes": ["c", "cpp", "cuda"],
      "rootPatterns": [".ccls-root", "compile_commands.json"],
      "initializationOptions": {
        "cache": {
          "directory": "/home/mirza/.ccls-cache"
        },
        "index": {
          "threads": 4
        },
        "highlight": {
          "lsRanges": true
        }
      }
    }
  },

  "python.linting.enabled": true,
  "python.linting.pylintEnabled": true,

  "cSpell.userWords": [
    "Halilcevic",
    "Pimpl",
    "Sdma",
    "Startify",
    "ccls",
    "chromatica",
    "cmake",
    "cuda",
    "fakeit",
    "fswitch",
    "gmock",
    "gtest",
    "isystem",
    "llvm",
    "mirza",
    "mirzah",
    "nlohmann",
    "pthread",
    "pylint",
    "ramdisk",
    "spdlog",
    "tzdata"
  ]
}
