{
  "languageserver": {
    "ccls": {
      "command": "ccls",
      "filetypes": ["c", "cpp", "cuda"],
      "rootPatterns": [".ccls-root", "compile_commands.json"],
      "initializationOptions": {
        "cache": {
          "directory": "/home/mirza/ramdisk/ccls-cache"
        },
        "index": {
          "threads": 4
        }
      }
    }
  },
  "codeLens.enable": true,
  "codeLens.separator": "",
  "diagnostic.enableHighlightLineNumber": false,
  "diagnostic.errorSign": "",
  "diagnostic.warningSign": "",
  "diagnostic.infoSign": "",
  "diagnostic.hintSign": "",
  "cSpell.userWords": [
    "Halilcevic",
    "Pimpl",
    "Sdma",
    "Startify",
    "ccls",
    "chromatica",
    "cuda",
    "fswitch",
    "isystem",
    "llvm",
    "mirza",
    "mirzah",
    "ramdisk"
  ]
}
