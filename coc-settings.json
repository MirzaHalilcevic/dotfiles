{
  "languageserver": {
    "ccls": {
      "command": "ccls",
      "filetypes": ["c", "cpp", "cuda"],
      "rootPatterns": [".ccls-root", "compile_commands.json"],
      "initializationOptions": {
        "cache": {
          "directory": "/home/mirza/ramdisk/ccls-cache"
        },
        "client": {
          "snippetSupport": true
        },
        "index": {
          "initialBlacklist": ["."]
        }
      }
    }
  },
  "codeLens.enable": true,
  "diagnostic.errorSign": "",
  "diagnostic.warningSign": "",
  "diagnostic.infoSign": "",
  "diagnostic.hintSign": ""
}
